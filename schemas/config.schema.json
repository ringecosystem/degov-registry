{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.degov.io/config.schema.json",
  "title": "DeGov Registry Configuration Schema",
  "description": "Schema for network-based DAO configuration registry",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_-]+$": {
      "type": "array",
      "description": "List of DAO configurations for this network",
      "items": {
        "type": "object",
        "properties": {
          "config": {
            "type": "string",
            "description": "Path to DAO configuration file (relative to daos/ directory) or HTTP/HTTPS URL",
            "pattern": "^(daos/[a-zA-Z0-9_-]+\\.yml|https?://[^\\s]+)$",
            "examples": [
              "daos/ring-dao.yml",
              "daos/ens-dao.yml",
              "https://example.com/dao-config.yml",
              "http://localhost:8080/config.yml"
            ]
          },
          "state": {
            "type": "string",
            "description": "Optional state of the DAO configuration",
            "enum": ["active", "draft", "inactive"],
            "examples": ["active", "draft", "inactive"]
          },
          "tags": {
            "type": "array",
            "description": "Optional tags to categorize the DAO",
            "items": {
              "type": "string"
            },
            "examples": [
              ["demo"],
              ["testnet", "experimental"]
            ]
          },
          "domains": {
            "type": "array",
            "description": "List of domains associated with the DAO",
            "items": {
              "type": "string"
            },
            "examples": [
              ["demo.example.com"]
            ]
          },
          "features": {
            "type": "array",
            "description": "Optional features for this DAO",
            "items": {
              "type": "string"
            },
            "examples": [
              ["fulfill"]
            ]
          }
        },
        "required": ["config"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "darwinia": [
        {
          "config": "daos/ring-dao.yml",
          "state": "active"
        },
        {
          "config": "daos/degov-demo.yml",
          "tags": ["demo"],
          "state": "draft"
        }
      ],
      "ethereum": [
        {
          "config": "daos/ens-dao.yml"
        }
      ]
    }
  ]
}
